---
import { getTranslation } from '@/i18n/utils';

interface Props {
  lang: 'en' | 'ar';
}

const { lang } = Astro.props;
const t = getTranslation(lang);

const testimonials = [
  {
    name: t('testimonials.t1.name'),
    role: t('testimonials.t1.role'),
    company: t('testimonials.t1.company'),
    content: t('testimonials.t1.content'),
    rating: 5
  },
  {
    name: t('testimonials.t2.name'),
    role: t('testimonials.t2.role'),
    company: t('testimonials.t2.company'),
    content: t('testimonials.t2.content'),
    rating: 5
  },
  {
    name: t('testimonials.t3.name'),
    role: t('testimonials.t3.role'),
    company: t('testimonials.t3.company'),
    content: t('testimonials.t3.content'),
    rating: 5
  }
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {t('testimonials.title.prefix')} <span class="gradient-text">{t('testimonials.title.highlight')}</span>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        {t('testimonials.subtitle')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map((testimonial) => (
        <div class="bg-[#241A4F] rounded-xl p-6 border border-primary/10 hover:border-primary/30 transition-all duration-300 hover:transform hover:scale-105">
          <div class="flex mb-4">
            {Array.from({ length: testimonial.rating }).map(() => (
              <i class="ri-star-fill text-primary"></i>
            ))}
          </div>
          
          <p class="text-gray-300 mb-6 leading-relaxed">
            "{testimonial.content}"
          </p>
          
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-dark font-bold mr-4">
              {testimonial.name.charAt(0)}
            </div>
            <div>
              <h4 class="font-semibold">{testimonial.name}</h4>
              <p class="text-sm text-gray-400">{testimonial.role}</p>
              <p class="text-xs text-primary">{testimonial.company}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .gradient-text {
    background: linear-gradient(135deg, #FFB62F 0%, #FF6B9D 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>