---
import { getTranslation } from '../i18n/meachat.ts';

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const t = getTranslation(locale);
---

<section id="features" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t.features.title.split(' ')[0]} <span class="gradient-text">{t.features.title.split(' ')[1]}</span></h2>
      <p class="text-gray-300 max-w-2xl mx-auto">{t.features.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {t.features.items.map((feature) => (
        <div class="feature-card bg-[#241A4F] rounded-xl p-6">
          <div class="flex items-start mb-4">
            <div class="w-12 h-12 rounded-full gradient-bg flex items-center justify-center mr-4">
              <i class="ri-star-fill text-white ri-lg"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold">{feature.title}</h3>
              <p class="text-gray-400">{feature.description}</p>
            </div>
          </div>
          <div class="bg-[#180C39] rounded-lg p-4 h-64">
            <p class="text-center text-gray-400 mt-20">Visual interface</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
