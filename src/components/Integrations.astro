---
import whatsapp from '../assets/img/integration/whatsapp.svg';
import messenger from '../assets/img/integration/messenger.svg';
import instagram from '../assets/img/integration/instagram.svg';
import telegram from '../assets/img/integration/telegram.svg';
import shopify from '../assets/img/integration/shopify.svg';
import woocommerce from '../assets/img/integration/woocommerce.svg';
import stripe from '../assets/img/integration/stripe.svg';
import paypal from '../assets/img/integration/paypal.svg';
import salesforce from '../assets/img/integration/salesforce.svg';
import hubspotSeeklogo from '../assets/img/integration/hubspot-seeklogo.svg';
import zendeskSeeklogo from '../assets/img/integration/zendesk-seeklogo.svg';
import intercom from '../assets/img/integration/intercom.svg';
import gmail from '../assets/img/integration/gmail.svg';
import googleTranslate from '../assets/img/integration/google-translate.svg';
import googleMaps from '../assets/img/integration/google-maps.svg';
import googleSheets from '../assets/img/integration/google-sheets.svg';
import awsS3 from '../assets/img/integration/aws-s3.svg';
import awsSes from '../assets/img/integration/aws-ses.svg';
import amazonDynamodb from '../assets/img/integration/amazon-dynamodb.svg';
import amazonRds from '../assets/img/integration/amazon-rds.svg';
import openai from '../assets/img/integration/openai.svg';
import deepseek from '../assets/img/integration/deepseek.svg';
import n8n from '../assets/img/integration/n8n.svg';
import makeColor from '../assets/img/integration/make-color.svg';
import zapierSeeklogo from '../assets/img/integration/zapier-seeklogo.svg';
---

<section id="integrations" class="py-20 bg-[#1D1245]">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Powerful <span class="gradient-text">Integrations</span></h2>
      <p class="text-gray-300 max-w-2xl mx-auto">Connect MeaChat with your favorite tools to sync data, trigger automations, and keep every system up to date.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Messaging & Social -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">Messaging & Social</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={whatsapp.src} alt="WhatsApp" class="w-6 h-6" />
            <span class="ml-2 text-sm">WhatsApp</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={messenger.src} alt="Messenger" class="w-6 h-6" />
            <span class="ml-2 text-sm">Messenger</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={instagram.src} alt="Instagram" class="w-6 h-6" />
            <span class="ml-2 text-sm">Instagram</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={telegram.src} alt="Telegram" class="w-6 h-6" />
            <span class="ml-2 text-sm">Telegram</span>
          </div>
        </div>
      </div>
      <!-- E-commerce -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">E-commerce</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={shopify.src} alt="Shopify" class="w-6 h-6" />
            <span class="ml-2 text-sm">Shopify</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={woocommerce.src} alt="WooCommerce" class="w-6 h-6" />
            <span class="ml-2 text-sm">WooCommerce</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={stripe.src} alt="Stripe" class="w-6 h-6" />
            <span class="ml-2 text-sm">Stripe</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={paypal.src} alt="PayPal" class="w-6 h-6" />
            <span class="ml-2 text-sm">PayPal</span>
          </div>
        </div>
      </div>
      <!-- CRM & Support -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">CRM & Support</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={salesforce.src} alt="Salesforce" class="w-6 h-6" />
            <span class="ml-2 text-sm">Salesforce</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={hubspotSeeklogo.src} alt="HubSpot" class="w-6 h-6" />
            <span class="ml-2 text-sm">HubSpot</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={zendeskSeeklogo.src} alt="Zendesk" class="w-6 h-6" />
            <span class="ml-2 text-sm">Zendesk</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={intercom.src} alt="Intercom" class="w-6 h-6" />
            <span class="ml-2 text-sm">Intercom</span>
          </div>
        </div>
      </div>
      <!-- Google Services -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">Google Services</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={gmail.src} alt="Gmail" class="w-6 h-6" />
            <span class="ml-2 text-sm">Gmail</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={googleTranslate.src} alt="Google Translate" class="w-6 h-6" />
            <span class="ml-2 text-sm">Google Translate</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={googleMaps.src} alt="Google Maps" class="w-6 h-6" />
            <span class="ml-2 text-sm">Google Maps</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={googleSheets.src} alt="Google Sheets" class="w-6 h-6" />
            <span class="ml-2 text-sm">Google Sheets</span>
          </div>
        </div>
      </div>
      <!-- AWS -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">Amazon Web Services</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={awsS3} alt="S3" class="w-6 h-6" />
            <span class="ml-2 text-sm">Amazon S3</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={awsSes.src} alt="SES" class="w-6 h-6" />
            <span class="ml-2 text-sm">Amazon SES</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={amazonDynamodb.src} alt="DynamoDB" class="w-6 h-6" />
            <span class="ml-2 text-sm">DynamoDB</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={amazonRds.src} alt="RDS" class="w-6 h-6" />
            <span class="ml-2 text-sm">Amazon RDS</span>
          </div>
        </div>
      </div>
      <!-- AI & Automation -->
      <div class="pricing-card bg-[#241A4F] rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-6">AI & Automation</h3>
        <div class="flex flex-wrap gap-3">
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={openai.src} alt="OpenAI" class="w-6 h-6" />
            <span class="ml-2 text-sm">OpenAI</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={deepseek.src} alt="Deepseek" class="w-6 h-6" />
            <span class="ml-2 text-sm">Deepseek</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={n8n} alt="N8N" class="w-6 h-6" />
            <span class="ml-2 text-sm">N8N</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={makeColor.src} alt="Make" class="w-6 h-6" />
            <span class="ml-2 text-sm">Make</span>
          </div>
          <div class="flex items-center bg-[#180C39] rounded-full px-3 py-1.5">
            <img src={zapierSeeklogo.src} alt="Zapier" class="w-6 h-6" />
            <span class="ml-2 text-sm">Zapier</span>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center mt-5">
      <a href="#" class="gradient-bg text-white px-8 py-3 rounded-lg font-medium hover:opacity-90 transition-opacity">Get Started</a>
    </div>
  </div>
</section>
