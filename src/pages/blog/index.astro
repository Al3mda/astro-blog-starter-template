---
import MeaChatLayout from '../../layouts/MeaChatLayout.astro';
import Header from '../../components/meachat/Header.astro';
import Footer from '../../components/meachat/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<MeaChatLayout title="Blog - MeaChat">
  <Header />
  
  <main class="bg-dark text-white py-20 min-h-screen">
    <div class="container mx-auto px-4">
      <section>
        <h1 class="text-4xl font-bold mb-8">Blog</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            posts.map((post) => (
              <a href={`/blog/${post.slug}/`} class="group">
                <div class="bg-dark-secondary rounded-card p-6 h-full transition-all hover:shadow-glow-primary">
                  {post.data.heroImage && (
                    <img
                      src={post.data.heroImage}
                      alt={post.data.title}
                      class="w-full h-48 object-cover rounded-lg mb-4"
                    />
                  )}
                  <h2 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-sm text-gray-400 mb-3">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  <p class="text-base text-gray-300">
                    {post.data.description}
                  </p>
                  <div class="mt-4">
                    <span class="text-primary font-medium">Read More â†’</span>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>
    </div>
  </main>
  
  <Footer />
</MeaChatLayout>
