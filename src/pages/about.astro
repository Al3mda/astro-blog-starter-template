---
import Layout from '../layouts/BlogPost.astro';
const locale = Astro.currentLocale || "en";
let title: string;
switch (locale) {
  case "ar":
    title = "عني";
    break;
  default:
    title = "About Me";
}
let description: string;
switch (locale) {
  case "ar":
    description = "معلومات عني وعن هذه المدونة";
    break;
  default:
    description = "Learn more about me and this blog";
}
---

<Layout
	title={title}
	description={description}
	pubDate={new Date('May 29 2023')}
	updatedDate={new Date('May 30 2023')}
	heroImage="/blog-placeholder-about.jpg"
>
	
	{locale === "ar" ? (
		<>
			<p>
				مرحباً! أنا مطور ومدون.
			</p>
			<p>
				هذه المدونة هي المكان الذي أشارك فيه أفكاري وخبراتي في البرمجة والتطوير.
			</p>
		</>
	) : (
		<>
			<p>
				Welcome! I'm a developer and blogger.
			</p>
			<p>
				This blog is where I share my thoughts and experiences in programming and development.
			</p>
		</>
	)}
</Layout>
