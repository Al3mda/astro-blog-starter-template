---
// src/layouts/MeaChatLayout.astro
import { getTranslation, isRTL } from '../utils/i18n';
import Header from '../components/meachat/Header.astro';
import Footer from '../components/meachat/Footer.astro';
import '../styles/style.css';

interface Props {
  title?: string;
  description?: string;
  locale?: string;
}

const { locale: propLocale } = Astro.props;
const locale = propLocale || getLocale(Astro.url);
const t = getTranslation(locale);
const {
  title = t.siteTitle,
  description = t.siteDescription
} = Astro.props;

const rtl = isRTL(locale);
const lang = rtl ? 'ar' : 'en';
---

<!DOCTYPE html>
<html lang={lang} dir={rtl ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <Header locale={locale} />
    <main>
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>
